@model Application.ViewModels.SaveProductoraViewModel
@{
    ViewData["Title"] = "DeleteProd";
}

<div class="row">
    <div class="col-6 offset-3">
        <div class="card">
            <div class="card-header bg-danger text-light">
                <h4>¿Está seguro que desea eliminar la productora?<img style="padding-left: 10px;" src="~/Image/eliminar.png" width="25" height="25" /></h4>
            </div>
            <div class="card-body">
                <form method="post" asp-controller="Streaming" asp-action="DeleteProdPost">
                    <input type="hidden" value="@Model.ProductoraId" asp-for="ProductoraId" />

                    <button type="submit" class="btn btn-danger" style="padding-right: 10px;"><img src="~/Image/eliminar.png" width="13" height="13" />  Eliminar</button>
                    <a asp-controller="Streaming" asp-action="Productora" class="btn btn-warning">Cancelar</a>
                </form>
            </div>
        </div>
    </div>
</div>
